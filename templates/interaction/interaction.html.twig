{% extends 'base.html.twig' %}

{% block title %}Interaction{% endblock %}

{% block body %}
{% if interactions|length is same as(0)  %}
<p class="text-center mt-5 font-weight-bold display-4">Pas d'interactions</p>
{% endif %}

<div class="container mt-5">
    {% for interaction in interactions %}
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Interaction {{ interaction.id }}</h5>
                <p class="card-text"><strong>Statut:</strong> {{ interaction.statut }}</p>
                <p class="card-text"><strong>Rapport:</strong> {{ interaction.report }}</p>
                <p class="card-text"><strong>Priorit√©:</strong> {{ interaction.priority }}</p>
                <p class="card-text"><strong>Type:</strong> {{ interaction.typeInteraction }}</p>
                <p class="card-text"><strong>Date:</strong> {{ interaction.date|date("F jS \\a\\t g:ia") }}</p>
                <a href="{{ path('delete_interaction' ,  {'id': interaction.id}) }}">Supprimer</a>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
