{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

 {% block body %}
 <div class="container">

 <div class="count mt-4">
         <a  class="btn btn-warning" href="{{ path('app_export_csv') }}">Export csv</a>
			</div>



  <div class="count">
 
</div>


  <h1 class="display-4 mt-4 mb-4 text-center">Mon carnet d'adresses clients</h1>

 
  <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Identifiant</th>
      <th scope="col">Nom</th>
      <th scope="col">Prénom</th>
      <th scope="col">E-mail</th>
      <th scope="col">Télephone</th>
      <th scope="col">Update</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>

    {% for contact in contacts %}


     <tr class="table-active">
      <th scope="row"><a href="{{ path('add_interaction', {'id': contact.id}) }}">{{ contact.id }}</a></th>
      <td>{{ contact.name }}</td>
      <td>{{ contact.firstname }}</td>
      <td>{{ contact.email }}</td>
      <td>{{ contact.tel }}</td>
      <td><a href="{{ path('app_contact_update', {'id': contact.id}) }}">Update</a></td>
      <td><a href="{{ path('app_contact_delete', {'id': contact.id}) }}" onclick="return confirm('Attention, cette action est irréversible!')">Delete</a></td
    </tr>
    
  {% endfor %}
 
 
   </tbody>
</table>

<div class="navigation d-flex justify-content-center mt-4">
    {{ knp_pagination_render(contacts) }}
</div>


</div>
 {% endblock %}